<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/nameThText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location TH"
        android:textStyle="bold"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/nameEnText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location EN"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/addressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textSize="13sp"
        android:paddingTop="2dp" />

    <TextView
        android:id="@+id/titleThText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drama TH"
        android:textStyle="bold"
        android:textSize="15sp"
        android:paddingTop="4dp" />

    <TextView
        android:id="@+id/titleEnText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drama EN"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/releaseYearText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Year"
        android:textSize="13sp"
        android:paddingTop="2dp" />

    <TextView
        android:id="@+id/sceneNotesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scene notes"
        android:textSize="13sp"
        android:paddingTop="2dp" />

    <TextView
        android:id="@+id/travelInfoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order of Travel"
        android:textSize="13sp"
        android:paddingTop="2dp" />

</LinearLayout>
