<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="12dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Order number -->
        <TextView
            android:id="@+id/orderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="#F6BB33"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingBottom="4dp" />

        <!-- Location Names -->
        <TextView
            android:id="@+id/nameThText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location TH"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/nameEnText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location EN"
            android:textSize="14sp" />

        <!-- Address with pin icon -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_pin"
                android:contentDescription="pin icon"
                card_view:tint="#555555" />

            <TextView
                android:id="@+id/addressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="13sp"
                android:paddingStart="4dp"/>
        </LinearLayout>

        <!-- Drama Titles -->
        <TextView
            android:id="@+id/titleThText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drama TH"
            android:textStyle="bold"
            android:textSize="15sp"
            android:paddingTop="6dp" />

        <TextView
            android:id="@+id/titleEnText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drama EN"
            android:textSize="14sp" />

        <!-- Year and scene notes -->
        <TextView
            android:id="@+id/releaseYearText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Year: 2025"
            android:textSize="13sp"
            android:paddingTop="4dp" />

        <TextView
            android:id="@+id/sceneNotesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scene Note: ... "
            android:textSize="13sp"
            android:paddingTop="2dp" />

        <!-- Travel info -->
        <TextView
            android:id="@+id/travelInfoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Travel by car: 10 min"
            android:textSize="13sp"
            android:paddingTop="4dp" />

        <!-- Buttons row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:paddingTop="8dp">

            <Button
                android:id="@+id/btnGoToDrama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Go to Drama"
                android:textAllCaps="false"
                android:background="@drawable/btn_rounded_corners"
                android:textColor="@color/white"
                android:paddingHorizontal="12dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnNextPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Go to Next Point"
                android:textAllCaps="false"
                android:background="@drawable/btn_rounded_corners"
                android:textColor="@color/white"
                android:paddingHorizontal="12dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:layout_marginEnd="8dp"/>

            <ImageButton
                android:id="@+id/btnFavorite"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_heart"
                android:contentDescription="Favorite"
                card_view:tint="#F44336" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
