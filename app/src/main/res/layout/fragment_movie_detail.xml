<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Background and Poster block -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="408dp">

                <!-- Background image -->
                <ImageView
                    android:id="@+id/ivBackground"
                    android:layout_width="match_parent"
                    android:layout_height="352dp"
                    android:layout_marginTop="20dp"
                    android:contentDescription="Background"
                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder_bg" />

                <!-- Poster Image -->
                <androidx.cardview.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="200dp"
                    android:layout_gravity="bottom|start"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="8dp">

                    <ImageView
                        android:id="@+id/ivMoviePoster"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="Movie Poster"
                        android:scaleType="centerCrop"
                        android:src="@drawable/placeholder_poster" />
                </androidx.cardview.widget.CardView>
            </FrameLayout>

            <!-- Spacer -->
            <View
                android:layout_width="match_parent"
                android:layout_height="24dp" />

            <!-- Content Section -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- Title -->
                <TextView
                    android:id="@+id/tvMovieTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Movie Title"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:maxLines="2" />

                <!-- Info row -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/tvYear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2018"
                        android:textColor="@color/dark_gray"
                        android:layout_marginEnd="16dp" />

                    <TextView
                        android:id="@+id/tvDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2h 30m"
                        android:textColor="@color/dark_gray"
                        android:layout_marginEnd="16dp" />

                    <TextView
                        android:id="@+id/tvGenre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Drama"
                        android:textColor="@color/dark_gray" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:background="@color/light_gray" />

                <!-- Description -->
                <TextView
                    android:id="@+id/tvMovieDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Movie description goes here..."
                    android:layout_marginTop="12dp"
                    android:lineSpacingExtra="4dp"
                    android:textColor="@android:color/black" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Rounded Yellow Header (placed above background) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="vertical"
        android:background="@drawable/header_rounded_bottom"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="18dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/circle_white_bg"
                android:src="@drawable/ic_back_arrow"
                android:tint="@android:color/black"
                android:contentDescription="Back" />

            <TextView
                android:id="@+id/headerTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Detail"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:singleLine="true"
                android:ellipsize="end" />

            <ImageButton
                android:id="@+id/favoriteButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_favorite_border"
                android:tint="@android:color/white"
                android:contentDescription="Favorite" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
